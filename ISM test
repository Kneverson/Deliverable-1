using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("Enter an integer value between 1 and 100:");
        int Input = ReadIntegerInput(1, 100);

        Console.WriteLine("Enter the series you want (even or odd):");
        string seriesType = ReadSeriesType();

        Console.WriteLine($"You have selected the {seriesType} series. The numbers between 0 and {Input} are:");

        int startNumber = seriesType == "even" ? 0 : 1;
        int increment = seriesType == "even" ? 2 : 2;

        int number = startNumber;
        while (number <= Input)
        {
            Console.WriteLine(number);
            number += increment;
        }
    }

    static int ReadIntegerInput(int 1, int 100)
    {
        int Input;
        while (true)
        {
            try
            {
                Input = int.Parse(Console.ReadLine());
                if (Input >= 1 && Input <= 100)
                    break;

                Console.WriteLine($"Please enter an integer between {1} and {100}.");
            }
            catch (FormatException)
            {
                Console.WriteLine("Invalid input. Please enter an integer.");
            }
        }
        return Input;
    }

    static string ReadSeriesType()
    {
        while (true)
        {
            string Input = Console.ReadLine().ToLower();
            if (Input == "even" || Input == "odd")
                return userInput;

            Console.WriteLine("Invalid series type. Please enter 'even' or 'odd'.");
        }
    }
} 
